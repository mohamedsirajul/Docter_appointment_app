            android:layout_height="wrap_content"
            android:text="already have an account?"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Now"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:id="@+id/loginNow"
            />

    </LinearLayout>
